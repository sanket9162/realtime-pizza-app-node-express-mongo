<section class="cart py-16 ">
    <% if(session.cart) {%>
        <div class="order container mx-auto w-1/2">
            <div class="flex item-center border-b boreder-grey-300 pb-4">
                <img src="/img/cart-black.png" alt="">
                <h1 class="font-bold ml-4 text-2xl">Order summary</h1>
            </div>
            <div class="pizza-list">
                <% for(let pizza of Object.values(session.cart.items)) {%>
                    <div class="flex item-center my-8">
                        <img class="w-24" src="/img/pizza.png" alt="">
                        <div class="flex-1 ml-4">
                            <h1>
                                <%= pizza.item.name%>
                            </h1>
                            <span>
                                <%= pizza.item.size%>
                            </span>
                        </div>
                        <span class="flex-1">
                            <%= pizza.qty%> Pcs
                        </span>
                        <span class="font-bold text-lg">₹<%= pizza.item.price * pizza.qty %></span>
                    </div>
                    <% } %>
            </div>
            <hr>
            <div class="text-right  py-4">
                <div>
                    <span class="text-lg font-bold">Total Amount</span>
                    <span class="amount text-2xl font-bold ml-2">
                        ₹<%= session.cart.totalPrice %>
                    </span>
                </div>
                <% if(user) {%>
                    <div>
                        <form action="/orders" method="POST" m-12>
                            <input class="border border-gray-400 p-2 w1/2 mb-4" type="text" placeholder="Phone Number"
                                name="phone" id="">
                            <input class="border border-gray-400 p-2 w1/2" type="text" placeholder="Address"
                                name="address" id="">
                            <div>
                                <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6 "
                                    type="submit">
                                    Order Now</button>

                            </div>
                        </form>
                    </div>

                    <%} else {%>
                        <a href="/login"
                            class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6 ">
                            Login
                            to continue</a>
                        <%}%>
            </div>
        </div>
        <% }else{ %>
            <div class="empty-cart py-16">
                <div class="container mx-auto text-center">
                    <h1 class="text-3xl font-bold mb-2">Cart Empty</h1>
                    <p class="text-gray-500 text-lg mb-12">
                        you probably haven't orderd a pizza yet.<br>
                        to order a pizza, go to the main page
                    </p>
                    <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
                    <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go
                        back</a>

                </div>
            </div>
            <% }%>
</section>